# Clawnads Environment Variables
# Copy this file to .env and fill in the values

# ---- Required ----

# Privy (embedded wallet infrastructure)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Admin authentication (32-byte hex string)
ADMIN_SECRET=your_admin_secret_hex

# Webhook receiver authentication
WEBHOOK_SECRET=your_webhook_secret

# Session signing (32+ byte hex string, used for HMAC)
SESSION_SECRET=your_session_secret_hex

# Environment
NODE_ENV=production

# ---- Required for Admin UI (/admin) ----

# X (Twitter) OAuth 2.0 credentials for admin login
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret

# ---- Optional ----

# Agent registration (shared secret for self-registration)
REGISTRATION_KEY=your_registration_key

# Telegram bot for DM notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# x402 payment verification treasury wallet
X402_TREASURY_ADDRESS=0xYourTreasuryAddress

# OAuth JWT signing key (falls back to SESSION_SECRET if not set)
OAUTH_SIGNING_KEY=your_oauth_signing_key

# Google Gemini API key (for texture generation)
NANO_BANANA_KEY=your_gemini_api_key
